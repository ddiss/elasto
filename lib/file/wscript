def options(opt):
	opt.load('compiler_c')

def configure(conf):
	conf.load('compiler_c')
	conf.env.append_unique('CFLAGS', ['-Wall','-g'])

def build(bld):
	bld.shlib(source='''handle.c io.c open.c xmit.c dir.c lease.c stat.c''',
		  target='elasto_file',
		  vnum='0.0.1',
		  lib=['curl', 'crypto', 'expat'],
		  use=['elasto', 'ccan'],
		  includes = '. .. ../../')
	bld.install_as('${INCLUDEDIR}/elasto/file.h', 'file_api.h')
