def options(opt):
	opt.load('compiler_c')

def configure(conf):
	conf.load('compiler_c')
	conf.env.append_unique('CFLAGS', ['-Wall','-g'])

def build(bld):
	bld.stlib(source='''azure_xml.c azure_req.c sign.c base64.c
			    conn.c azure_ssl.c dbg.c data.c''',
		  target='elasto',
		  lib=['curl','xml2','crypto'],
		  use=['ccan'],
		  includes = '. ..')
